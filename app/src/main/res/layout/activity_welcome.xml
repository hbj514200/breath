<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome_text"
        android:text="@string/huxi"
        android:textSize="63sp"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.35"
        android:textColor="#FAFAFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/welcome_xiaotext"
        android:textSize="13sp"
        android:visibility="invisible"
        android:text="love you"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#EBEBEB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <FrameLayout
        android:layout_above="@id/welcome_xiaotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:visibility="gone"
            android:layout_marginBottom="35dp"
            android:id="@+id/welcome_button"
            android:layout_width="140dp"
            android:layout_height="140dp" />
        <ImageView
            android:visibility="gone"
            android:layout_marginBottom="35dp"
            android:id="@+id/welcome_go"
            android:src="@drawable/welcome_go"
            android:layout_width="140dp"
            android:layout_height="140dp" />
    </FrameLayout>


</RelativeLayout>

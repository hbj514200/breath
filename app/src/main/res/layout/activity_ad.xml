<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/finish_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/finish_dayuan"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <ImageView
            android:id="@+id/finish_dayuantext"
            android:src="@drawable/yun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>


    <TextView
        android:visibility="invisible"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/lantian"
        android:lineSpacingMultiplier="1.3"
        android:id="@+id/finish_xiatext"
        android:textSize="15sp"
        android:textColor="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.gms.ads.NativeExpressAdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-6630898560544189/7466661757"
        ads:adSize="360x320">
    </com.google.android.gms.ads.NativeExpressAdView>

    <Button
        android:visibility="invisible"
        android:textColor="#FAFAFA"
        android:background="@drawable/yanse_button"
        android:id="@+id/finish_button"
        android:layout_gravity="center_horizontal"
        android:text="@string/tuichu"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
